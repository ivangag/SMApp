<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/google_card_view_checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/white_transparent"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="false"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="4dp">

    <LinearLayout
        android:id="@+id/viewDoctorViewDetails"
        android:background="@color/icons"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/viewHeaderDoctorDetails"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageDoctorAvatar"
            android:src="@drawable/ic_doctor"
            android:scaleType="centerCrop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible"
            app:riv_corner_radius="10dip"
            app:riv_border_width="2dip"
            app:riv_border_color="@color/icons"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/txtViewDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageDoctorAvatar"
            android:layout_toEndOf="@+id/imageDoctorAvatar"
            android:text="Doctor Name"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/accent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txtViewDoctorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewDoctorName"
            android:layout_toRightOf="@+id/imageDoctorAvatar"
            android:layout_toEndOf="@+id/imageDoctorAvatar"
            android:text="Medical Number 001"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/secondary_text"
            android:layout_margin="5dp"
            />
        </RelativeLayout>



        <View
            android:id="@+id/viewDivider"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Primary_Grey_300"
            >
        </View>

        <RelativeLayout
            android:id="@+id/viewBottomDoctorViewDetails"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/imageDoctorEmail"
                android:src="@drawable/ic_action_settings"
                android:scaleType="centerCrop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="visible"
                android:background="@drawable/oval_shape"
                app:riv_corner_radius="10dip"
                app:riv_border_width="0dip"
                app:riv_border_color="@color/icons"
                app:riv_mutate_background="true"
                app:riv_tile_mode="clamp"
                app:riv_oval="true" />
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:clickable="true"
                android:layout_toRightOf="@+id/imageDoctorEmail"
                android:layout_toEndOf="@+id/imageDoctorEmail"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/imageDoctorMessage"
                android:src="@drawable/ic_action_accept"
                android:scaleType="centerCrop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="visible"
                android:background="@drawable/oval_shape"
                app:riv_corner_radius="10dip"
                app:riv_border_width="0dip"
                app:riv_border_color="@color/icons"
                app:riv_mutate_background="true"
                app:riv_tile_mode="clamp"
                app:riv_oval="true" />
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/imageDoctorCall"
                android:src="@drawable/ic_call_grey600_24dp"
                android:scaleType="centerCrop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="visible"
                android:background="@drawable/oval_shape"
                app:riv_corner_radius="10dip"
                app:riv_border_width="0dip"
                app:riv_border_color="@color/icons"
                app:riv_mutate_background="true"
                app:riv_tile_mode="clamp"
                app:riv_oval="true" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/viewCheckInDetails"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:visibility="visible"
                android:id="@+id/list_medicines_question"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:divider="@color/accent"
                android:dividerHeight="0.2dp"
                android:background="@color/white_transparent"/>
        </FrameLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>